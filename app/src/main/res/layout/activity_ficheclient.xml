<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ficheclient"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bakbt"
    tools:context="bellakhder.abdallah.prise_rendez_vous.ficheclient"
    android:weightSum="1">

    <TextView
        android:text="Fiche client"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_weight="0.09"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="Local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_weight="0.06"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edlc"
        android:layout_weight="0.09" />
    <TextView
        android:text="InsÃ©rer votre date et heure de votre rendez-vous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtx"
        android:layout_weight="0.07"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <Button
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnd"
            android:layout_weight="0.00"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent"
            android:background="@android:drawable/ic_lock_idle_low_battery" />

        <Button
            android:text="Heure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnt"
            android:layout_weight="0.00"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent"
            android:background="@android:drawable/ic_lock_idle_low_battery" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/tvd"
            android:layout_weight="0.79"
            android:textColor="@color/colorAccent" />

    </LinearLayout>
    <ImageButton

        android:layout_width="82dp"
        android:layout_height="65dp"

        android:layout_marginTop="80dp"
        android:elevation="10dp"
        android:id="@+id/btnan"
        android:src="@drawable/next"

        android:background="@drawable/nextbt"

        android:layout_alignBottom="@+id/btnan"
        android:layout_toLeftOf="@+id/btnan"
        android:layout_toStartOf="@+id/btnan"
        android:layout_marginRight="19dp"
        android:layout_marginEnd="19dp"
        android:layout_weight="0.19" />
</LinearLayout>
