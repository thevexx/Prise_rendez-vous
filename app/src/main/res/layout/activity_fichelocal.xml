<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_fichelocal"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bakbt"
    tools:context="bellakhder.abdallah.prise_rendez_vous.fichelocal"
    android:weightSum="1">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edittext2"
        android:layout_weight="0.18"
        android:hint="Descrpition"
        android:textSize="24sp"
        android:textAllCaps="false"

        android:textStyle="normal|bold" />
    <TextView
        android:text="InsÃ©rer votre date et heure de votre rendez-vous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvtx"
        android:layout_weight="0.13"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@color/colorAccent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:orientation="horizontal">

        <Button
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnd"
            android:layout_weight="0.00"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent"
            android:background="@android:drawable/ic_lock_idle_low_battery" />

        <Button
            android:text="Heure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnt"
            android:layout_weight="0.00"
            android:textStyle="normal|bold"
            android:textColor="@color/colorAccent"
            android:background="@android:drawable/ic_lock_idle_low_battery" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:id="@+id/tvd"
            android:layout_weight="0.79"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

    <Button
        android:text="demander rendez-vous"
        android:layout_width="201dp"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/btrd"
        android:backgroundTint="@android:color/holo_blue_dark" />

</LinearLayout>
